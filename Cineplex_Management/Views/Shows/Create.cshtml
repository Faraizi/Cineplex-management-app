@model Cineplex_Management.ViewModels.ShowVm

@{
    ViewData["Title"] = "Create Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #121212;
        color: #ffffff;
    }

    h1, h4 {
        color: #ff3c3c;
    }

    label {
        color: #ffffff;
    }

    .form-control {
        background-color: #1e1e1e;
        color: #ffffff;
        border: 1px solid #444;
    }

        .form-control:focus {
            border-color: #ff3c3c;
            box-shadow: 0 0 0 0.2rem rgba(255, 60, 60, 0.25);
        }

    .btn-primary {
        background-color: #ff3c3c;
        border-color: #ff3c3c;
    }

        .btn-primary:hover {
            background-color: #e60000;
            border-color: #e60000;
        }

    .btn-secondary {
        background-color: #333;
        border-color: #444;
        color: white;
    }

    a, a:hover {
        color: #ff3c3c;
    }
</style>

<h1>Create Show</h1>
<h4>Enter Show Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ShowName" class="control-label"></label>
                <input asp-for="ShowName" class="form-control" />
                <span asp-validation-for="ShowName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MovieId" class="control-label">Movie</label>
                @Html.DropDownListFor(
                         model => model.MovieId,
                         Model.Movies,
                         "Select a Movie",
                         new { @class = "form-control" }
                         )
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HallId" class="control-label">Hall</label>
                @Html.DropDownListFor(
                         model => model.HallId,
                         Model.Halls,
                         "Select a Hall",
                         new { @class = "form-control" }
                         )
                <span asp-validation-for="HallId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShowStart" class="control-label"></label>
                <input asp-for="ShowStart" class="form-control" type="datetime-local" />
                <span asp-validation-for="ShowStart" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ShowEnd" class="control-label"></label>
                <input asp-for="ShowEnd" class="form-control" type="datetime-local" />
                <span asp-validation-for="ShowEnd" class="text-danger"></span>
            </div>

            <div class="form-group d-flex gap-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
