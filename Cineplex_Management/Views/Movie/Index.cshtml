@model IEnumerable<Cineplex_Management.Models.Movie>

@{
    ViewData["BodyClass"] = "Movie-List";
    ViewData["Title"] = "Movie List";
}

<div class="movie-list-wrapper">
    <div class="movie-list-container">
        <h1>@ViewData["Title"]</h1>

        <p class="text-end">
            <a asp-action="Create" asp-controller="Movie" class="btn btn-primary">Add Movie</a>
        </p>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Poster</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MovieName)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ProducerId)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" width="100" alt="@item.MovieName" class="img-thumbnail" />
                        </td>
                        <td>@item.MovieName</td>
                        <td>@item.ProducerId</td>
                        <td>
                            <form asp-action="Delete" asp-controller="Movie" asp-route-id="@item.MovieId" method="post" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
