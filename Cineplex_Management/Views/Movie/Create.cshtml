@model Cineplex_Management.ViewModel.MovieVM

@{
    ViewData["Title"] = "Create Movie";
}

<style>
    body {
        background-attachment: fixed;
        background-image: url('/images/11.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        min-height: 100vh;
        color: white;
    }

    .form-container {
        background-color: #2c2c2c;
        padding: 30px;
        border-radius: 10px;
        max-width: 600px;
        margin: 50px auto;
        box-shadow: 0 0 10px rgba(0,0,0,0.7);
    }

        .form-container h2 {
            color: #ff4c4c;
            text-align: center;
            margin-bottom: 30px;
        }

    .form-group label {
        color: #f8f9fa;
    }

    .btn-primary {
        background-color: #c62828;
        border: none;
    }

        .btn-primary:hover {
            background-color: #a91b1b;
        }

    .btn-secondary {
        background-color: #555;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #444;
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }
</style>

<div class="form-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="MovieName">Movie Name</label>
            <input type="text" id="MovieName" name="MovieName" class="form-control" value="@Model.MovieName" />
        </div>

        <div class="form-group mb-3">
            <label for="ProducerId">Producer ID</label>
            <input type="number" id="ProducerId" name="ProducerId" class="form-control" value="@Model.ProducerId" />
        </div>

        <div class="form-group mb-4">
            <label for="ImageVm">Upload Image</label>
            <input type="file" id="ImageVm" name="ImageVm" class="form-control" />
        </div>

        <div class="button-group">
            <button type="submit" class="btn btn-primary">Create Movie</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
