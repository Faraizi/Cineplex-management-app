@model Cineplex_Management.Models.Hall

@{
    ViewData["Title"] = "Delete Hall";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0" style="max-width: 600px; margin: auto;">
        <div class="card-header bg-danger text-white text-center">
            <h3>Delete Confirmation</h3>
        </div>
        <div class="card-body bg-light">
            <h5 class="text-center text-danger mb-4">Are you sure you want to delete this hall?</h5>

            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.HallName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.HallName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Row)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Row)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Column)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Column)</dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="HallId" />
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
