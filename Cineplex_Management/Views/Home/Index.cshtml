@model IEnumerable<Movie>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

<!-- Carousel Section -->
<div class="carousel-wrapper">
    <h3 class="italic-heading">Now Showing</h3>
    <div class="movie-carousel">
        @foreach (var item in Model)
        {
            <div class="movie-slide">
                <img src="@item.Image" alt="@item.MovieName" />
                <div class="overlay-title">@item.MovieName</div>
            </div>
        }
    </div>
</div>

<!-- Grid Card Section -->
<h3 class="italic-heading">All Movies...</h3>
<div class="movie-grid">
    @foreach (var item in Model)
    {
        <div class="movie-card">
            <img src="@item.Image" alt="@item.MovieName" />
            <h5>@item.MovieName</h5>
            @Html.ActionLink("Details","Details","Shows")
        </div>
    }
</div>

<style>
    body {
        background-color: #111; /* Dark background color */
        color: #fff; /* White text for contrast */
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .carousel-wrapper {
        background-color: rgba(0, 0, 0, 0.6); /* Dark overlay for carousel */
    }

    .movie-carousel {
        width: 100%;
        margin: auto;
    }

    .movie-slide {
        position: relative;
        height: 250px;
        margin: 0 20px;
        width: 100%;
    }

        .movie-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }

    .overlay-title {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 10px;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        text-align: center;
        font-size: 18px;
        border-radius: 0 0 10px 10px;
    }

    /* Grid Section */
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        padding: 40px 10%;
        background-color: rgba(17, 17, 17, 0.8); /* Darker background for movie cards */
    }

    .movie-card {
        background: #222; /* Dark background for each card */
        padding: 10px;
        border-radius: 10px;
        text-align: center;
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 0 10px rgba(255, 0, 0, 0.1); /* Subtle red glow by default */
    }

        .movie-card:hover {
            transform: scale(1.03);
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.5); /* Stronger red glow on hover */
        }
        .movie-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .movie-card h5 {
            margin-top: 10px;
            font-size: 16px;
        }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.movie-carousel').slick({
                infinite: true,
                slidesToShow: 2,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2500,
                arrows: false,
                dots: true,
                pauseOnHover: false
            });
        });
    </script>
}
